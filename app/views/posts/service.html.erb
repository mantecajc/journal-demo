<% Post.where(category_id: 2).order(total: :desc).each do |post| %>
  <%= link_to post, id: "content-links", :action => 'go' do %>
    <div class="title-section" id="service-color">
      <div class="section-description" id="service-color">
        <div id="post-topic"><%= post.topic %></div>
        <div id="post-title"><%= post.title %></div>
      </div>
      <div class="number-comments" id="service-round-color">
        <div id="number-comments">
          <%= post.total %>
        </div>
        <div id="comments">SOLLICITATIONS</div>
      </div>
    </div>
  <% end %>

  <div class="content-section">

    <div class="context-box">
      <h3>Contexte</h3>
        <p class="content-font"><%= post.content %></p>
        <p>Mail : <%= post.number %></p>
        <p>Réseaux sociaux : <%= post.social_media %></p>
        <p>Appels : <%= post.phone_contact %></p>
        <p>Total : <%= post.total %></p>
    </div>

    <div class="solution-box" id="box-color">
      <h3>Solution</h3>
        <p class="content-font"><%= post.solution %></p>
    </div>

    <div class="edit-box">
      <% if user_signed_in? %>
        <%= link_to "Éditer", edit_post_path(post), :class => 'edit-button', :id => 'edit-color' %>
        <%= link_to "Supprimer", post_path(post), :class => 'edit-button', :id => 'edit-color', method: :delete, data: { confirm: "Êtes-vous sûr ?" } %>
      <% end %>
    </div>

  </div>
<% end %>

