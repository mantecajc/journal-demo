<% Post.where(category_id: 1).each do |post| %>
  <%= link_to post, id: "content-link", :action => 'go' do %>
    <div id="title-section">
      <div><%= post.title %></div>
      <div><%= post.topic %></div>
      <div><%= post.number %></div>
    </div>
  <% end %>

  <div id="content-section">
    <h3>Contexte</h3>
      <p><%= post.content %></p>
    <h3>Solution</h3>
      <p><%= post.solution %></p>
      <% if user_signed_in? %>
        <%= link_to "Éditer", edit_post_path(post) %> |
        <%= link_to "Supprimer", post_path(post), method: :delete, data: { confirm: "Êtes-vous sûr ?" } %>
      <% end %>
  </div>
<% end %>

<footer>
  <% if user_signed_in? %>
    <%= link_to 'Déconnexion', destroy_user_session_path, method: :delete %>
  <% else %>
    <%= link_to 'Créer un compte', new_user_registration_path %>
    <%= link_to 'Se connecter', new_user_session_path %>
  <% end %>
</footer>


