<% Post.where(category_id: 1).each do |post| %>
  <%= link_to post, id: "content-links", :action => 'go' do %>
    <div class="title-section">
      <div class="section-description">
        <div id="post-topic"><%= post.topic %></div>
        <div id="post-title"><%= post.title %></div>
      </div>
      <div class="number-comments">
        <div id="number-comments">
          <% if post.phone_contact == nil && post.social_media == nil  %>
            <%= Post.where(:id => post).sum('number') %>
          <% elsif post.phone_contact == nil && post.number == nil  %>
            <%= Post.where(:id => post).sum('social_media') %>
          <% elsif post.number == nil && post.social_media == nil  %>
            <%= Post.where(:id => post).sum('phone_contact') %>
          <% elsif post.number == nil %>
            <%= Post.where(:id => post).sum('social_media + phone_contact') %>
          <% elsif post.social_media == nil %>
            <%= Post.where(:id => post).sum('number + phone_contact') %>
          <% elsif post.phone_contact == nil %>
            <%= Post.where(:id => post).sum('number + social_media') %>
          <% else %>
            <%= Post.where(:id => post).sum('number + social_media + phone_contact') %>
          <% end %>
        </div>
        <div id="comments">SOLLICITATIONS</div>
      </div>
    </div>
  <% end %>

  <div class="content-section">

    <div class="context-box">
      <h3>Contexte</h3>
        <p class="content-font"><%= post.content %></p>
        <p>Mail : <%= post.number %></p>
        <p>Réseaux sociaux : <%= post.social_media %></p>
        <p>Appels : <%= post.phone_contact %></p>
    </div>

    <div class="solution-box">
      <h3>Solution</h3>
        <p class="content-font"><%= post.solution %></p>
    </div>

    <div class="edit-box">
      <% if user_signed_in? %>
        <%= link_to "Éditer", edit_post_path(post), :class => 'edit-button' %>
        <%= link_to "Supprimer", post_path(post), :class => 'edit-button', method: :delete, data: { confirm: "Êtes-vous sûr ?" } %>
      <% end %>
    </div>

  </div>
<% end %>

