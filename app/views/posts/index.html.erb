<div class="nav-title-section">
 <%= link_to 'Actualités', posts_path, :class => 'actu-nav-title-section' %>
</div>

<% Post.where(category_id: 1).order(total: :desc).each do |post| %>
  <div id="content-links">
    <div class="title-section">
      <div class="section-description">
        <div id="post-topic"><%= post.topic %></div>
        <div id="post-title"><%= post.title %></div>
      </div>
      <div id="box">
        <div class="number-comments">
          <div id="number-comments">
            <%= post.total %>
          </div>
          <div id="comments">SOLLICITATIONS</div>
        </div>
      </div>
    </div>
  </div>

  <div class="content-section" id="content-section">

    <div class="context-box">

      <div class="paragraphe-box">
        <h3>Contexte</h3>
          <p class="content-font"><%= post.content %></p>
      </div>

      <div class="icons-box">
        <div class="number-comments-body">
          <div id="number-comments-body">
            <%= post.total %>
          </div>
          <div id="comments-body">SOLLICITATIONS</div>
        </div>

        <div class="social-box">
          <div class="comments-context">
            <div><i class="fas fa-comment"></i></div>
            <div><%= post.total %></div>
          </div>
          <div class="mail">
            <div><i class="fas fa-envelope"></i></div>
            <div><%= post.number %></div>
          </div>
          <div class="social-media">
            <div><i class="fab fa-twitter" id="social-media-icon"></i></div>
            <div><%= post.social_media %></div>
          </div>
          <div class="calls">
            <div><i class="fas fa-phone"></i></div>
            <div><%= post.phone_contact %></div>
          </div>
        </div>

      </div>

    </div>

    <div class="solution-box">
      <h3>Solution</h3>
        <p class="content-font"><%= post.solution %></p>
    </div>

    <div class="edit-box">
      <% if user_signed_in? %>
        <%= link_to "Éditer", edit_post_path(post), :class => 'edit-button' %>
        <%= link_to "Supprimer", post_path(post), :class => 'edit-button', method: :delete, data: { confirm: "Êtes-vous sûr ?" } %>
      <% end %>
    </div>

  </div>
<% end %>

