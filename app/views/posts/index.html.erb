<% Post.where(category_id: 1).each do |post| %>
  <%= link_to post, id: "content-links", :action => 'go' do %>
    <div class="title-section">
      <div class="section-description">
        <div id="post-topic"><%= post.topic %></div>
        <div id="post-title"><%= post.title %></div>
      </div>
      <div class="number-comments">
        <div id="number-comments"><%= post.number %></div>
        <div id="comments">SOLLICITATIONS</div>
      </div>
    </div>
  <% end %>

  <div class="content-section">
    <h3>Contexte</h3>
      <p><%= post.content %></p>
    <h3>Solution</h3>
      <p><%= post.solution %></p>
      <% if user_signed_in? %>
        <%= link_to "Éditer", edit_post_path(post) %> |
        <%= link_to "Supprimer", post_path(post), method: :delete, data: { confirm: "Êtes-vous sûr ?" } %>
      <% end %>
  </div>
<% end %>

