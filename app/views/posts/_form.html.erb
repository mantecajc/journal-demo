<%= simple_form_for @post do |f| %>
  <%= f.collection_select :category_id, Category.all, :id, :name, {promt: "Choose a Category" } %>
  <%= f.input :topic, label: 'Thème' %>
  <%= f.input :title, label: 'Titre' %>
  <%= f.input :content, label: 'Contexte' %>
  <%= f.input :solution, label: 'Solution de la Ville' %>
  <%= f.input :number, label: 'Chiffres' %>
  <%= f.input :social_media, label: 'Réseaux sociaux' %>
  <%= f.input :phone_contact, label: 'Appels' %>
  <%= f.submit 'Publier' %>
<% end %>