    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;400;500;700&display=swap" rel="stylesheet">
  </head>

  <body>
    <div class="nav-bar">
      <div class="logo">
        <h1><%= link_to 'Journal des Parisiens', root_path %></h1>
      </div>
      <div class="menu">
        <h2><%= link_to 'ACTU DE LA SEMAINE', root_path %></h2>
        <h2><%= link_to 'SERVICES', services_path %></h2>
        <h2><%= link_to 'SUGGESTIONS ET SIGNAUX FAIBLES', sugestions_path %></h2>
        <h2><%= link_to 'CONTACT', contact_path %></h2>
      </div>
    </div>
    <%= yield %>
