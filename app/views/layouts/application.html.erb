<!DOCTYPE html>
<html>
  <head>
    <title>JournalDesParisien</title>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css" integrity="sha384-3AB7yXWz4OeoZcPbieVW64vVXEwADiYyAEhwilzWsLw+9FgqpyjjStpPnpBO8o8S" crossorigin="anonymous">
  </head>

  <body>
      <div class="nav-wrapper">
        <div class="left-side">
          <div class="logo"><%= image_tag "logo.png", :class => "style_logo" %></div>
          <h1><%= link_to 'JOURNAL DES PARISIENS', posts_path, :class => 'journal' %></h1>
        </div>

        <div class="right-side">
          <div class="nav-link-wrapper">
            <%= active_link_to '', posts_path, class: "menu", id: "menu-actu" %>
          </div>

          <div class="nav-link-wrapper">
            <div><%= active_link_to 'Services', services_path, class: "menu" %></div>
          </div>

          <div class="nav-link-wrapper">
            <div><%= active_link_to '', sugestions_path, class: "menu", id: "menu-suggestions" %></div>
          </div>

          <div class="nav-link-wrapper" id="nav-link-wrapper-right">
            <div><%= active_link_to 'Contact', contact_path, class: "menu" %></div>
          </div>
        </div>
        <!-- Burger menu -->
        <div id="hamburger">
          <div id="hamburger-content">
            <nav>
              <ul>
                <li><%= link_to 'Acualités', posts_path, :class => 'burger-menu-options' %></li>
                <li><%= link_to 'Services', services_path, :class => 'burger-menu-options' %></li>
                <li><%= link_to 'Suggestions', sugestions_path, :class => 'burger-menu-options' %></li>
                <li><%= link_to 'Contact', contact_path, :class => 'burger-menu-options' %></li>
              </ul>
            </nav>
            <div class="footer_hamburger">

              <div class="footer_second">
                <div class="title_footer_hamburger">NOUS SUIVRE</div>
                <div class="social_icons">
                  <a href="https://www.facebook.com/paris"  target="_blank"><i class="fab fa-facebook"></i></a>
                  <a href="https://twitter.com/paris" target="_blank"><i class="fab fa-twitter"></i></a>
                  <a href="https://www.instagram.com/paris_maville/" target="_blank"><i class="fab fa-instagram"></i></a>
                  <a href="https://www.linkedin.com/company/villedeparis/" target="_blank"><i class="fab fa-linkedin"></i></a>
                </div>
              </div>
            </div>


            <!-- don't touche -->
          </div>

          <button id="hamburger-button">&#9776;</button>
          <div id="hamburger-sidebar">
            <div id="hamburger-sidebar-header">
              <div class="hamburger-header-empty">
                
              </div>
              <div class="hamburger-header-title">
                <%= image_tag 'logo-burger.png', :class => 'logo-burger' %>
              </div>
              <div class="hamburger-closed-button">
                <button id="closed-button">&#10005;</button>
              </div>
            </div>
            <div id="hamburger-sidebar-body"></div>
          </div>
          <div id="hamburger-overlay"></div>
        </div>
        <!-- End burger menu -->
      </div>
    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

    <div class="footer">
      <div class="left_footer">
        <div class="logo_footer">
          <%= image_tag "logo_footer.png", :class => "style_logo_footer" %>
        </div>
        <div class="button_new">
          <% if user_signed_in? %>
            
          <% end %>
        </div>

      </div>

      <div class="right_footer">
        <div class="footer_second">

          <div class="title_footer">Recevez chaque semaine l'actualité de votre ville</div>

          <div class="links_footer">
            <% if user_signed_in? %>
              <div><%= link_to 'Créer un nouveau journal', new_post_path, :class => 'btn-blue' %></div>
              <div><%= link_to 'Déconnexion',  destroy_user_session_path, method: :delete, :class => 'btn-red' %></div>
            <% else %>
              <div><%= link_to 'Créer un compte', new_user_registration_path, :class => 'btn-blue' %></div>
              <div><%= link_to 'Se connecter', new_user_session_path, :class => 'btn-red' %></div>
            <% end %>
          </div>

        </div>
        <div class="footer_second">
          <div class="title_footer">Suivez-nous sur les réseaux sociaux</div>
          <div class="social_icons">
            <a href="https://www.facebook.com/paris"  target="_blank"><i class="fab fa-facebook"></i></a>
            <a href="https://twitter.com/paris" target="_blank"><i class="fab fa-twitter"></i></a>
            <a href="https://www.instagram.com/paris_maville/" target="_blank"><i class="fab fa-instagram"></i></a>
            <a href="https://www.linkedin.com/company/villedeparis/" target="_blank"><i class="fab fa-linkedin"></i></a>
          </div>
        </div>
      </div>
    </div>
    
    <script
  src="https://code.jquery.com/jquery-3.5.1.js"
  integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
  crossorigin="anonymous"></script>

    <script>
      $('#content-section').hide()
      $('#content-links').on('click', function(){
        $('#content-section').toggle();
        $('#box').toggle();
        });
    </script>

    <%= javascript_pack_tag 'hamburger' %>
  </body>
  
</html>

